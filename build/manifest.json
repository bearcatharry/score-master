{
    "name": "ScoreMaster",
    "version": "1.0",
    "description": "NBA basketball scores",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": { 
        "16": "logo1.png",
        "48": "logo1.png",
        "128": "scoremaster_logo.png" 
    },
    "permissions": ["contextMenus", "storage"],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "ScoreMaster"
    },
    "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'",

    "manifest_version": 2
}
